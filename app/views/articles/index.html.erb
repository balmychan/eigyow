<%= stylesheet_link_tag "//cdn.jsdelivr.net/bootstrap.tagsinput/0.4.2/bootstrap-tagsinput.css" %>
<%= javascript_include_tag  "//cdn.jsdelivr.net/bootstrap.tagsinput/0.4.2/bootstrap-tagsinput.min.js" %>

<style type='text/css'>
.bootstrap-tagsinput {
    width: 100%;
}
</style>

<div class="container col-sm-9 col-sm-offset-3">
  
<div class="row">
  <div class="col-md-6">
    <div class="input-group">
      <%= search_form_for @q do |f| %>
      <%= f.text_field :company_name_cont, :class => 'form-control', :placeholder => 'Company' %>
      <span class="input-group-btn">
        <%= f.submit'Search', :class => 'btn btn-default', :type => 'button' %>
      </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  <div class="col-md-6">
    <div class="input-group">
      <%= search_form_for @q do |f| %>
      <%= f.text_field :article_keywords_keyword_cont, :class => 'form-control', :placeholder => 'Keyword' %>
      <span class="input-group-btn">
        <%= f.submit'Search', :class => 'btn btn-default', :type => 'button' %>
      </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<table>
	  <thead>
	    <tr>
	      <th>Company</th>
	      <th>Date</th>
	      <th>Substance</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @articles.each do |article| %>
	      <tr>
	        <td><%= article.company.name %></td>
	        <td><%= article.created_at.strftime('%Y年%m月%d日')%></td>
	        <td><%= article.article_keywords %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>    
</div>