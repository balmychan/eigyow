<%= stylesheet_link_tag "//cdn.jsdelivr.net/bootstrap.tagsinput/0.4.2/bootstrap-tagsinput.css" %>
<%= javascript_include_tag  "//cdn.jsdelivr.net/bootstrap.tagsinput/0.4.2/bootstrap-tagsinput.min.js" %>

<style type='text/css'>
.bootstrap-tagsinput {
    width: 100%;
}
</style>

<%= render "shared/sidebar" %>

<div class="container col-sm-9 col-sm-offset-3">
  <div class="well">
    <%= form_for(@article, html: {:class => 'form-horizontal', :multipart => true}) do |f| %>
      <div class="form-group">
        <label for='id' class="col-sm-2 control-label">作成者</label>
        <div class="col-sm-4">
          <%= text_field_tag :username, nil, {:id =>'user', :readonly => true, :class => 'form-control', :placeholder => @user.username} %>
          <%= f.hidden_field :user_id, :value => @user.id %>
        </div>
        <label for='time' class="col-sm-2 control-label">作成日時</label>
        <span id='time' class="col-sm-4 control-label"></span>
      </div>
      
      <div class="form-group">  
        <label for='company' class="col-sm-2 control-label">会社名</label>
        <div class="col-sm-4">
          <%= text_field_tag :company, nil, :class => 'form-control' %>
        </div>
        <label for='representative' class="col-sm-2 control-label">担当者</label>
        <div class="col-sm-4 ">
          <%= text_field_tag :representative, nil, :class => 'form-control', "data-role" => "tagsinput" %>
        </div>
      </div>
      
      <div class='form-group'>
        <label class="col-sm-2 control-label">形式</label>
        <div class="btn-group" data-toggle="buttons">
          <label class="btn btn-default">
            <input type="radio" name="type" id="direct" value="DirectArticle">面談
          </label>
          <label class="btn btn-default">
            <input type="radio" name="type" id="tel" value="TelArticle">電話
          </label>
          <label class="btn btn-default">
            <input type="radio" name="type" id="email" value="EmailArticle">E-Mail
          </label>
        </div>
      </div>
      
      <div class="form-group"> 
        <div class="col-sm-12">
          <%= f.text_area :note, :rows => "30" , :class => 'form-control', 'wrap' => "hard" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-upload"></i></span>
            <%= file_field_tag 'proposals[]', {:multiple => true, :class => 'form-control'} %>
          </div>
        </div> 
        <div class="col-sm-6">
          <%= f.submit "送信", :class => 'btn btn-primary pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
